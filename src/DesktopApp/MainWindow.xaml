<Window x:Class="HospitalApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApp.Desktop"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        MinHeight="400"
        MinWidth="900"
        Title="Login" Height="400" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Background="Gray" Foreground="White" x:Name="loginBox" Height="30" Width="200" FontSize="15"></TextBox>
        <TextBox Grid.Row="1" Background="Gray" Foreground="White" x:Name="passwordBox" Height="30" Width="200" FontSize="15"></TextBox>
        <Button Grid.Row="2" Width="200" Height="50" Click="Button_Click">Войти</Button>
    </Grid>
</Window>
